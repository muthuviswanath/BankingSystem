@model IEnumerable<BankProject.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/CustomStyle.css");
}


@if (Model.Count() == 0)
{
    <h1 style="text-align:center">Customer data is not available please add some customers</h1>
}
else
{
    <h1>All Customers</h1>
    for (var i = 0; i < Model.Count(); i++)
    {
        <div class="main">
            <div class="testimonial">
                <div class="card">
                    <div class="circle">
                        <img src="~/Content/img/user.jpg">
                    </div>
                    <div> <h2> @Model.ElementAt(i).Name</h2></div>
                    <div><h5> @Model.ElementAt(i).City</h5></div>
                    <button>@Html.ActionLink("Details", "Details", new { id = @Model.ElementAt(i).ID })</button>
                </div>
            </div>
        </div>

        if (i % 3 == 2)
        {
            <br />
        }
    }
}




