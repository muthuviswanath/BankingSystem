@model BankProject.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Content/DetailStyle.css");
}


<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/Content/img/user.jpg" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Html.DisplayFor(model => model.Name)</h4>
                                <p class="text-secondary mb-1">@Html.DisplayFor(model => model.City)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <h2 style="text-align:center">Customer Details</h2>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model=> model.Name)
                                
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.Email)
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Email)
                            </div>
                        </div>
                        <hr>


                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.Phone)
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Phone)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.DOB)
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.DOB)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.AdharNumber)
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.AdharNumber)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.PanCardNo)
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.PanCardNo)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.Address)
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.Address)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                @Html.LabelFor(model => model.City)
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Html.DisplayFor(model => model.City)
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <button>@Html.ActionLink("Back to List", "Index")</button>
                            </div>
                        </div>
                    </div>
                </div>





            </div>
        </div>

    </div>
</div>